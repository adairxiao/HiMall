.shipping-address .selected {
  margin: 10rpx;
  padding: 30rpx 0;
  border: #bbbbbb 1px solid;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  position: relative;
}
.shipping-address .selected .title,
.shipping-address .selected .addr {
  flex: 1 0 auto;
  font-weight: 500;
  color: #333333;
}
.shipping-address .selected .title {
  font-size: 15px;
  font-weight: bold;
}
.shipping-address .selected .title .phone {
  font-size: 12px;
  color: #999999;
}
.shipping-address .selected .addr {
  font-size: 12px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
.shipping-address .Unselected {
  margin: 10rpx;
  padding: 30rpx 0;
  height: 150rpx;
  border: #bbbbbb 1px solid;
  color: #bbbbbb;
  border-radius: 10rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  text-align: center;
}
.goods-detail {
  margin: 10rpx;
}
.goods-detail .title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  line-height: 30rpx;
  padding: 10rpx;
}
.goods-detail .content {
  display: flex;
  justify-content: center;
  flex-flow: column nowrap;
}
.goods-detail .content .goods-card {
  flex: 1 0 auto;
  margin: 10rpx 0;
}
.leave-word {
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  color: #999999;
  margin: 10rpx;
  padding: 29rpx 0;
}
.leave-word .leave-word-title {
  flex-shrink: 0;
  min-width: 50rpx;
}
.leave-word .leave-word-content {
  flex: 1 1 auto;
  color: #000;
  width: auto;
}
.order-info {
  margin: 10rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #333333;
  line-height: 30rpx;
}
.order-info .total-price,
.order-info .haul-price {
  margin-top: 35rpx;
  text-align: left;
  overflow: hidden;
}
.order-info .total-price text,
.order-info .haul-price text {
  float: right;
  color: #fb6993;
}
.order-info .haul-price {
  margin-bottom: 35rpx;
}
.order-info .haul-price text {
  color: #999999;
}
.pay-column {
  width: 100%;
  height: 98rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  flex-flow: row nowrap;
}
.pay-column .column-left {
  flex: 1 1 auto;
  height: 100%;
  display: table;
  text-align: right;
}
.pay-column .column-left text {
  display: table-cell;
  vertical-align: middle;
}
.pay-column .column-right {
  flex: 0 0 auto;
  margin-left: 50rpx;
  width: 200rpx;
  height: 100%;
  background-color: #fb6993;
  display: table;
  text-align: center;
}
.pay-column .column-right text {
  display: table-cell;
  vertical-align: middle;
  color: white;
}
