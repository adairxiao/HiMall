.shipping-address {
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: stretch;
  margin: 10rpx;
}
.shipping-address .address {
  flex: 1 1 auto;
  padding: 30rpx 0;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  position: relative;
}
.shipping-address .address .title,
.shipping-address .address .addr {
  flex: 1 0 auto;
  font-weight: 500;
  color: #333333;
}
.shipping-address .address .title {
  font-size: 15px;
  font-weight: bold;
}
.shipping-address .address .title .phone {
  font-size: 12px;
  color: #999999;
}
.shipping-address .address .addr {
  font-size: 12px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
.shipping-address .edit {
  flex: 1 0 auto;
  margin-left: 40rpx;
}
.shipping-address .edit view {
  width: 100%;
  height: 100%;
  display: table;
  text-align: center;
  padding: 0 30rpx;
}
.shipping-address .edit view text {
  display: table-cell;
  vertical-align: middle;
  position: relative;
  font-size: 28rpx;
  font-weight: 500;
  color: #999999;
  line-height: 30rpx;
}
.shipping-address .edit view text::before {
  display: block;
  content: '';
  position: absolute;
  top: 50%;
  left: -30rpx;
  height: 39rpx;
  transform: translateY(-50%);
  border-left: 1px dotted #999;
}
