<!-- pages/address/edit/index.wxml -->
<view class="addr-edit">
  <view class="addr-info">
    <form catchsubmit="formSubmit">
      <view class="linkMan">
        <label>收货人</label>
        <input name="linkMan" value="" type="text" placeholder="请输入收货人昵称" placeholder-class="input-placeholder" maxlength="7"></input>
      </view>
      <view class="mobile">
        <label>手机号</label>
        <input name="mobile" value="" type="number" placeholder="请输入手机号" placeholder-class="input-placeholder" maxlength="11"></input>
      </view>
      <view class="city">
        <label>所在地区</label>
        <picker name="city" mode="region" bindchange="bindRegionChange" value="{{region}}" bindchange="cityChange">
          <view class="picker {{region.length===0 ? 'arrow':''}}">
            <block wx:for="{{region}}" wx:for-index="index" wx:key="index">
              {{index!==2 ? item+',':item}}
            </block>
          </view>
        </picker>
      </view>
      <view class="address">
        <label>详细地址</label>
        <textarea name="address" value="" type="text" placeholder="详细地址：如道路、门牌号、小区、楼栋 号、单元室等" placeholder-class="input-placeholder"></textarea>
      </view>
      <button class="from-btn" form-type="submit"></button>
    </form>
  </view>
  <view class="seva-btn">
    <text>保存该地址并使用</text>
  </view>
</view>